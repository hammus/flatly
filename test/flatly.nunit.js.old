global.root = require('path').resolve(__dirname);
global.parent = require('path').dirname(__filename);

var Flatly = require('../dist/flatly.js').Flatly;
var flatly = new Flatly({src: './fixtures/', name: 'names'});

var subset = flatly.getTable('subset');

exports.tableNames = {
    tableNames: function(test) {
        test.expect(1);
        test.equal(flatly.tableNames, [
            'names',
            'subset'
        ]);
        test.done()
    }
}


